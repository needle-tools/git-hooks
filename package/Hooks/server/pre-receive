#!/usr/bin/env bash
echo "Running custom pfc pre-receive hooks âš”"

set -o pipefail

nullsha="0000000000000000000000000000000000000000"
maxsize=100
maxbytes=$(( $maxsize * 1024 * 1024 ))
status=0

# Read stdin for ref information
while read oldref newref refname; do
  # Skip branch deletions
  if [ "$newref" = "$nullsha" ]; then
    continue
  fi

  # Set oldref to HEAD if this is branch creation
  if [ "$oldref" = "$nullsha" ]; then
    oldref="HEAD"
  fi

  # Find large objects
  for file in $(git rev-list --objects ${oldref}..${newref} | \
      git cat-file --batch-check='%(objectname) %(objecttype) %(objectsize) %(rest)' | \
      awk -v maxbytes="$maxbytes" '$3 > maxbytes { print $4 }'); do

    # Display error header if this is the first offending file
    if [ "$status" -eq "0" ]; then
      status=1

      echo ""
      echo "-------------------------------------------------------------------------"
      echo "ðŸ˜² Your push was rejected because it contains files larger than $maxsize MB."
      echo "Please discuss with your team and/or move the file to LFS ðŸ¤ "
      echo "-------------------------------------------------------------------------"
      echo
      echo "ðŸ¤® Offending files:"
    fi

    echo " - $file"
  done
done

if [ "$status" -ne "0" ]; then echo; fi
exit $status